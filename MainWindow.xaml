<Window x:Class="Spaceinvaders.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Spaceinvaders"
        mc:Ignorable="d"
        Title="SpaceInvaders" Height="500" Width="800" ResizeMode="NoResize" PreviewKeyDown="Window_PreviewKeyDown">
    <Grid>
        <Canvas x:Name="SpaceCanvas" Grid.Column="1" Grid.Row="2" Background="LightGreen">
            <TextBlock x:Name="LoseScreen" TextWrapping="Wrap" Text="Game over press Enter to start" TextAlignment="Center" FontSize="100" Foreground="Black" HorizontalAlignment="Left" Height="400" VerticalAlignment="Center" Width="700"/>
        </Canvas>
    </Grid>
</Window>
